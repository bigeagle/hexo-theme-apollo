figure.highlight
  background color-code
  border 1px solid color-border
  margin 0
  padding 7px 15px
  border-radius 2px
  text-shadow 0 0 1px #fff
  line-height 1.6
  overflow auto
  position relative
  font-size 11pt
  figcaption
    color color-meta
    margin-bottom 5px
    text-shadow 0 0 1px #fff
    a
      position absolute
      right 15px

  pre
    background none
    border none
    padding 0
    margin 0

  table
    margin-top 0
    border-spacing 0

  th
    font-weight: normal
    border-bottom: 0
    padding-bottom: 0

  td
    border-bottom: 0
    padding: 0


  .gutter
    color color-meta
    padding-right 10px
    border-right 1px solid color-border
    text-align right
    white-space: nowrap

  .code
    padding-left 10px
    border-left 1px solid #fff
    color #666

@media screen and (max-width: 767px)
  figure.highlight
    .gutter
       display: none
  .gist-file .line-numbers
    display: none 
   



